{
  "class": "AS3",
  "action": "deploy",
  "persist": true,
  "declaration": {
    "class": "ADC",
    "schemaVersion": "3.26.0",
    "id": "WAF_Policy",
    "Tenant": {
      "class": "Tenant",
      "Application": {
        "class": "Application",
        "service": {
          "class": "Service_HTTP",
          "virtualAddresses": ["10.1.20.20"],
          "pool": "httpbin_pool",
          "policyWAF": {
            "use": "wafPolicy"
          }
        },
        "httpbin_pool": {
          "class": "Pool",
          "monitors": [
            "http"
          ],
          "members": [
            {
              "addressDiscovery": "fqdn",
              "servicePort": 80,
              "hostname": "httpbin.org"
            }
          ]
        },
        "wafPolicy": {
          "class": "WAF_Policy",
          "policy": {
            "base64": "{{ policy_b64 }}"
          },
          "ignoreChanges": false
        }
      }
    }
  }
}
